<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/main"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">

    <TextView android:id="@+id/smsser_main_logo_title"
              style="@style/main_logo_text"
              android:text="@string/kanbanery"/>

    <ImageView
            android:id="@+id/kanbanery_logo"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/logo_big" android:contentDescription="@string/logo"/>

    <TextView android:id="@+id/my_number_text_view"
              style="@style/my_number"
              android:text=""/>

    <Button android:id="@+id/push_all_to_smsser"
            style="@style/center"
            android:text="@string/login"/>
</LinearLayout>
