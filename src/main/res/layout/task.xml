<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
              style="@style/task"
        >

    <TextView android:id="@+id/owner_name"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:text="Pwner"
              android:layout_alignRight="@+id/owner_image"
            />

    <ImageView android:id="@+id/owner_image"
               android:layout_height="25dp"
               android:layout_width="25dp"
               android:contentDescription="User icon"
               android:src="@drawable/listIcon"
               android:layout_alignParentRight="true"
                       />

    <TextView android:id="@+id/task_type"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:layout_alignParentTop="true"
              android:layout_alignParentRight="true"
              android:text="Task type"
            />

    <TextView android:id="@+id/task_name"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:text="Task name"
              android:background="@drawable/border"
            />




</RelativeLayout>